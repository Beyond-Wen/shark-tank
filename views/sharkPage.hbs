<div class='page-container'>
  <div class='header-container'>
    <div class='page-title'>
      <h1 class='heading'>{{name}}</h1>
    </div>
  </div>
  <div class='image-container'>
    <img class='image' src={{imageRef}} alt='image of shark' />
  </div>
  <div class='facts-container'>
    <div class='fact-box'>
      <h2 class="fact-subhead">Appearance</h2>
      {{appearance}} 
    </div>
    <div class='fact-box'>
     <h2 class="fact-subhead">Habitat</h2>
      {{habitat}} 
    </div>
    <div class='fact-box'>
      <h2 class="fact-subhead">Behaviour</h2>
      {{behaviour}} 
    </div>
  </div>
  <div class='questions-container'>
    <div class="question-button-container">
        <div class='question-form-container'>
          <div class="question-form-box">
    <form method='POST' action='/questions/add' class='form'>
        <textarea
          class="question-box"
          type='text'
          id='question'
          name='question'
          rows="5"
          placeholder='Ask our experts a question!'
          value=''
        /></textarea>
      </form>

          </div>
  
      <div class="button-container">
            <button>Submit</button>
      </div>
    </div>
      </form>

   
    <div class='current-questions'>
      <div class="'question-answer-dyad">
<div class='question-box'>
  <div class='user-container'>
          <div class='avatar'>
            <img
              class='avatar-image'
              src='https://clipart.world/wp-content/uploads/2020/08/adorable-baby-shark.jpg'
              alt='avatar'
            />
          </div>
          <div class="avatar-bio">
          {{!-- <p class='bio-text'>Zoe Bloomington</p>
          <p class='bio-text'>PhD Sharkology from Harvard</p> --}}
          </div>
        </div>
        <p class='question-text'>How big is the shark?</p>
      </div>
      <div class='answer-box'>
        <div class='expert-container'>
          <div class='avatar'>
            <img
              class='avatar-image'
              src='https://static.vecteezy.com/system/resources/thumbnails/002/002/332/small_2x/ablack-man-avatar-character-isolated-icon-free-vector.jpg'
              alt='avatar'
            />
          </div>
          <div class="avatar-bio">
          <p class='bio-text'>Zoe Bloomington</p>
          <p class='bio-text'>PhD Sharkology from Harvard</p>
          </div>
        </div>
        <p class='answer-text'>Really big!</p>

      </div>

      </div>
      
    </div>

     </div>
  </div>
</div>